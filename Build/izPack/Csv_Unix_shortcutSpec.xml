<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>


<shortcuts>
  <skipIfNotSupported />

  <programGroup defaultName="reCsvEditor" location="applications"/>

   <shortcut
     name="reCsv Editor"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/lib/runCsvEditor.sh"
     commandLine=""
     initialState="noShow"
     iconFile="$INSTALL_PATH/lib/CsvEd.png"
     workingDirectory=""
     iconIndex="0" 
     type="Application"
     encoding="UTF-8"
     description="Csv Editor">
     <createForPack name="Base" />
   </shortcut>
   

   <shortcut
     name="reCsv Editor (Big File)"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/lib/runCsvEditorBigFile.sh"
     commandLine=""
     initialState="noShow"
     iconFile="$INSTALL_PATH/lib/CsvEd.png"
