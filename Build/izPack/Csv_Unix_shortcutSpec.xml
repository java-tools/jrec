     name="reCsvEd - Uninstaller"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     initialState="noShow"
     iconFile="trashcan_full"
     iconIndex="0" 
     target="$INSTALL_PATH/lib/Uninstall.sh"
     type="Application"
     terminal="true"
     encoding="UTF-8"
     description="IzPack uninstaller">
     <createForPack name="Base" />
