     type="Application"
     encoding="UTF-8"
     description="Csv Editor for big files. You should change bat/sh to get the most from it.">
     <createForPack name="Base" />
   </shortcut>
   

  <shortcut
     name="reCsvEd Documentation"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
